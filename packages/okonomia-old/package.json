{
  "private": true,
  "name": "counter-1",
  "version": "1.0.0",
  "description": "A template for kick starting a Cloudflare Workers project",
  "main": "index.js",
  "scripts": {
    "test": "yarn build && ava **/*.spec.ts  **/**/*.spec.ts",
    "format": "prettier --write '**/*.{js,css,json,md}'",
    "build": "esbuild src/index.ts --format=esm --bundle --sourcemap --outfile=dist/index.mjs",
    "dev": "miniflare --watch --debug"
  },
  "author": "Valtýr Örn Kjartansson <valtyr@gmail.com>",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "ava": "^3.15.0",
    "esbuild": "^0.12.17",
    "miniflare": "^1.3.3",
    "prettier": "^1.18.2",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^2.2.2",
    "itty-router": "^2.3.10",
    "reflect-metadata": "^0.1.13"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nonSemVerExperiments": {
      "configurableModuleFormat": true
    },
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--experimental-vm-modules",
      "--no-warnings"
    ]
  }
}
