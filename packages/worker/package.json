{
  "private": true,
  "name": "@okonomia/worker",
  "version": "1.0.0",
  "description": "Cloudflare worker for Ökonomía",
  "main": "index.js",
  "scripts": {
    "test": "yarn build && ava **/*.spec.ts  **/**/*.spec.ts",
    "format": "prettier --write '**/*.{js,css,json,md}'",
    "build": "esbuild src/index.ts --format=esm --bundle --sourcemap --outfile=dist/index.mjs",
    "dev": "miniflare --watch --debug --kv USERS",
    "lint": "yarn lint:typescript && yarn lint:eslint",
    "lint:typescript": "tsc --noemit",
    "lint:eslint": "eslint **/*.{ts,d.ts}"
  },
  "ultra": {
    "concurrent": [
      "lint"
    ]
  },
  "author": "Valtýr Örn Kjartansson <valtyr@gmail.com>",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "ava": "^3.15.0",
    "esbuild": "^0.12.17",
    "eslint": "^7.32.0",
    "miniflare": "^1.3.3",
    "prettier": "^2.3.2",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^2.2.2",
    "@types/node-forge": "^0.10.2",
    "buffer": "^6.0.3",
    "itty-router": "^2.3.10",
    "jszip": "^3.7.1",
    "nanoid": "^3.1.23",
    "node-forge": "^0.10.0",
    "reflect-metadata": "^0.1.13",
    "zod": "^3.7.1"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nonSemVerExperiments": {
      "configurableModuleFormat": true
    },
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--experimental-vm-modules",
      "--no-warnings"
    ]
  }
}
